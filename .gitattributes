    <button id="botao-calcular">Calcular</button>
    <button id="botao-confirmar" style="display:none;">Fazer Pedido</button>
    <p id="resultado"></p>

    <script>
        document.getElementById('botao-calcular').onclick = function() {
            var placas = parseInt(document.getElementById('placas').value);
            var uso = document.getElementById('uso').value;
            var estado = document.getElementById('estado').value;

            // Validação para uso comercial
            if (uso === "comercial" && placas < 5) {
                alert("Para uso comercial/industrial, o mínimo é 5 placas.");
                return;
            }

            // Calcular o valor do frete
            var frete = 0;
            if (estado === "RJ") {
                frete = 30; // Frete para o Rio de Janeiro
            } else {
                frete = 70; // Frete para os outros estados
            }

            var valorTotal = placas * 100 + frete; // Supondo que cada placa custa 100
            document.getElementById('resultado').innerHTML = 
                "Valor Total: R$ " + valorTotal.toFixed(2) + 
                "<br>Frete: R$ " + frete.toFixed(2);

            // Mostrar o botão de confirmar pedido
            document.getElementById('botao-confirmar').style.display = 'block';
        };

        document.getElementById('botao-confirmar').onclick = function() {
            alert("Obrigado pelo seu pedido! Aguardamos você novamente.");
            // Aqui você pode adicionar mais ações, como redirecionar ou limpar o formulário
        };
    </script>
